<div class="sidebar-widget">
  <h2 class= "sidebar-widget-title">Recent Posts</h2>
  <% @recent_posts = Post.recent_posts %>
  <ul class= "sidebar-widget-content">
    <% @recent_posts.each do |p| %>
      <li><%= link_to p.title, post_path(p) %></li>
    <% end %> 
  </ul>
</div>

